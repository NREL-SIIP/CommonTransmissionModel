    "url" : "https://virtserver.swaggerhub.com/daniel_thom/ListBuses/1.0.0",
    "description" : "SwaggerHub API Auto Mocking"
  } ],
  "tags" : [ {
    "name" : "admins",
    "description" : "Secured Admin-only calls"
  }, {
    "name" : "developers",
    "description" : "Operations available to regular developers"
  } ],
  "paths" : {
    "/components/buses" : {
      "get" : {
        "tags" : [ "developers" ],
        "summary" : "lists buses",
        "description" : "By passing in the appropriate options, you can search for\navailable buses in the system\n",
        "operationId" : "listBuses",
        "parameters" : [ {
          "name" : "searchString",
          "in" : "query",
          "description" : "pass an optional search string for looking up inventory",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "skip",
          "in" : "query",
          "description" : "number of records to skip for pagination",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "minimum" : 0,
            "type" : "integer",
            "format" : "int32"
          }
        }, {
          "name" : "limit",
          "in" : "query",
          "description" : "maximum number of records to return",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "maximum" : 50,
            "minimum" : 0,
            "type" : "integer",
            "format" : "int32"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "search results matching criteria",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Bus"
                  }
                }
              }
            }
          },
          "400" : {
            "description" : "bad input parameter"
          }
        }
      },
      "post" : {
        "tags" : [ "admins" ],
        "summary" : "adds a bus to the system",
        "description" : "Adds a bus to the system",
        "operationId" : "addBus",
        "requestBody" : {
          "description" : "Bus to add",
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/Bus"
              }
            }
          }
        },
        "responses" : {
          "201" : {
            "description" : "bus created"
          },
          "400" : {
            "description" : "invalid input, object invalid"
          },
          "409" : {
            "description" : "an existing item already exists"
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Bus" : {
        "required" : [ "base_kv", "va", "vm" ],
        "type" : "object",
        "properties" : {
          "base_kv" : {
            "type" : "number",
            "description" : "base voltage",
            "example" : 1.2
          },
          "vm" : {
            "type" : "number",
            "description" : "voltage magnitude",
            "example" : 1.3
          },
          "va" : {
            "type" : "number",
            "description" : "voltage angle",
            "example" : 1.3
          },
          "type" : {
            "type" : "integer",
            "description" : "bus type for power flow (1=PQ, 2=PV, 3=Slack)",
            "example" : 1
          },
          "vm_lb" : {
            "type" : "number",
            "description" : "a lower limit on voltage magnitude",
            "example" : 1.2
          },
          "vm_ub" : {
            "type" : "number",
            "description" : "an upper limit on voltage magnitude",
            "example" : 1.2
          },
          "area" : {
            "type" : "integer",
            "description" : "assigned control area",
            "example" : 1
          },
          "zone" : {
            "type" : "integer",
            "description" : "assigned control zone",
            "example" : 1
          }
        }
      }
    }
  }
}
