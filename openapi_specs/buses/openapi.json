      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "title": "Buses API",
    "version": "1.0.0"
  },
  "host": "virtserver.swaggerhub.com",
  "basePath": "/daniel_thom/ListBuses/1.0.0",
  "schemes": [
    "https"
  ],
  "paths": {
    "/components/buses": {
      "get": {
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "description": "pass an optional search string for looking up inventory",
            "in": "query",
            "name": "searchString",
            "required": false,
            "type": "string"
          },
          {
            "description": "number of records to skip for pagination",
            "format": "int32",
            "in": "query",
            "minimum": 0,
            "name": "skip",
            "required": false,
            "type": "integer"
          },
          {
            "description": "maximum number of records to return",
            "format": "int32",
            "in": "query",
            "maximum": 50,
            "minimum": 0,
            "name": "limit",
            "required": false,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "search results matching criteria",
            "schema": {
              "items": {
                "$ref": "#/definitions/Bus"
              },
              "type": "array"
            }
          },
          "400": {
            "description": "bad input parameter"
          }
        },
        "tags": [
          "developers"
        ],
        "description": "By passing in the appropriate options, you can search for\navailable buses in the system\n",
        "operationId": "listBuses",
        "summary": "lists buses"
      },
      "post": {
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "description": "Bus to add",
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Bus"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "bus created"
          },
          "400": {
            "description": "invalid input, object invalid"
          },
          "409": {
            "description": "an existing item already exists"
          }
        },
        "tags": [
          "admins"
        ],
        "description": "Adds a bus to the system",
        "operationId": "addBus",
        "summary": "adds a bus to the system"
      }
    }
  },
  "definitions": {
    "Bus": {
      "properties": {
        "area": {
          "description": "assigned control area",
          "example": 1,
          "type": "integer"
        },
        "base_kv": {
          "description": "base voltage",
          "example": 1.2,
          "type": "number"
        },
        "index": {
          "description": "a unique identifier for components",
          "example": 1,
          "type": "integer"
        },
        "name": {
          "description": "a flexible name for components, non required to be unique",
          "example": "1",
          "type": "string"
        },
        "status": {
          "description": "a 0/1 value indicating if the component should be omitted or not (0 => omitted)",
          "example": 1,
          "type": "integer"
        },
        "type": {
          "description": "bus type for power flow (1=PQ, 2=PV, 3=Slack)",
          "example": 1,
          "type": "integer"
        },
        "va": {
          "description": "voltage angle",
          "example": 1.3,
          "type": "number"
        },
        "vm": {
          "description": "voltage magnitude",
          "example": 1.3,
          "type": "number"
        },
        "vm_lb": {
          "description": "a lower limit on voltage magnitude",
          "example": 1.2,
          "type": "number"
        },
        "vm_ub": {
          "description": "an upper limit on voltage magnitude",
          "example": 1.2,
          "type": "number"
        },
        "zone": {
          "description": "assigned control zone",
          "example": 1,
          "type": "integer"
        }
      },
      "required": [
        "base_kv",
        "index",
        "source_id",
        "status",
        "va",
        "vm"
      ],
      "type": "object"
    }
  },
  "tags": [
    {
      "description": "Secured Admin-only calls",
      "name": "admins"
    },
    {
      "description": "Operations available to regular developers",
      "name": "developers"
    }
  ],
  "x-components": {}
}
